{
    "version": 2,
    "projects": [
      {
        "src": "client",
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "build"
      },
      {
        "src": "server",
        "buildCommand": "npm install",
        "startCommand": "npm run dev"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/client/$1"
      }
    ]
  }
  